<div class="container" style="margin-top: 50px;">
    <h1 class="text-center font-market-saturday">Login</h1>

    <div class="row justify-content-around">
        <div class="col-md-4">
            <hr>
            <%= form_tag sessions_path do %>
              <div class="form-group">
                <%= text_field_tag :email, params[:email], :class => 'form-control', :placeholder => 'Email' %>
              </div>
              <div class="form-group">
                <%= password_field_tag :password, nil, :class => 'form-control', :placeholder => 'Password' %>
              </div>
              <button type="submit" class="btn btn-dark btn-block">
                  Login
              </button>
            <% end %>
            <hr>
            <a href="#" class="text-muted float-right">Forgot password</a>
            <%= link_to 'Create account', signup_path, :class => 'text-muted' %>
        </div>
    </div>
</div>
