<div class="container" style="margin-top: 50px;">
  <h1 class="text-center font-market-saturday">Create account</h1>

  <div class="row justify-content-around">
    <div class="col-md-4">
      <hr>
      <%= form_for @user do |f| %>
        <% if @user.errors.any? %>
          <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.text_field :email, :class => 'form-control', :placeholder => 'Email' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Password confirmation' %>
        </div>
        <button type="submit" class="btn btn-dark btn-block">
          Create account
        </button>
      <% end %>
      <hr>
      <center>
        <%= link_to 'I already have an account', login_path, :class => 'text-muted' %>
      </center>
    </div>
  </div>
</div>
