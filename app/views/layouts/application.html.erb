  </head>

  <body class="bg-light">
      <div id="container">
          <div class="bg-white">
            <%= render 'layouts/nav' %>
          </div>

          <%= yield :header %>

          <div id="body">
              <%= yield %>
          </div>

          <div id="footer">
              <%= render 'layouts/footer' %>
          </div>
      </div>
  </body>
</html>
